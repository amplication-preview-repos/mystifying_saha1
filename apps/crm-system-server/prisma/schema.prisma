datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Stage {
  id            String         @id @default(cuid())
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  name          String?
  dynamicFields DynamicField[]
  scheme        Scheme?        @relation(fields: [schemeId], references: [id])
  schemeId      String?
}

model Scheme {
  id            String         @id @default(cuid())
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  name          String?
  stages        Stage[]
  dynamicFields DynamicField[]
  applications  Application[]
}

model Transition {
  id               String   @id @default(cuid())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  sourceStage      String?
  destinationStage String?
}

model DynamicField {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String?
  value     Json?
  stage     Stage?   @relation(fields: [stageId], references: [id])
  stageId   String?
  scheme    Scheme?  @relation(fields: [schemeId], references: [id])
  schemeId  String?
}

model Application {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  description String?
  name        String?
  scheme      Scheme?  @relation(fields: [schemeId], references: [id])
  schemeId    String?
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  firstName String?
  lastName  String?
  username  String   @unique
  email     String?  @unique
  password  String
  roles     Json
}
